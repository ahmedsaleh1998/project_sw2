@model IEnumerable<library_management.Model.Client>
    

@{
    ViewBag.Title = "Index_client";
}

<h2>clients list</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.National_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.National_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.ListBox("Book_Id", new SelectList(item.Books, "Book_Id", "Title"))
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit_client", new { id = item.Client_Id }) |
                @Html.ActionLink("Details", "Details_client", new { id = item.Client_Id }) |
                @Html.ActionLink("Delete", "Delete_client", new { id = item.Client_Id })
            </td>
        </tr>
    }

</table>
